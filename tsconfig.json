{
  "compilerOptions": {
    "module": "ES2020",
    "esModuleInterop": true,
    "rootDir": "lib",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "types",
    "outDir": "dist"
  },
  "include": ["lib"]
}
